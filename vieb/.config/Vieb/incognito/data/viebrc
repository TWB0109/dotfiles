" Options
set adblocker=update
set downloadpath=~/downloads/
set firefoxmode=always
set guinavbar=oninput
set guitabbar=always
set search=https://www.google.com/search?q=%s
set searchwords=
set searchwords+=yt~youtube.com/results?search_query=%s
set searchwords+=bv~https://search.brave.com/?q=%s
set searchwords+=ddg~https://duckduckgo.com/?kae=g&q=%s
set searchwords+=gh~https://github.com/search?q=%s
set splitbelow
set splitright
set vimcommand=emacs

" Incognito Options
set clearcookiesonquit=true
set clearhistoryonquit=true
set clearlocalstorageonquit=true
set explorehist=session
set favicons=disabled
set restoretabs=false

" Mappings
emap ii <toNormalMode>
imap ii <toNormalMode>
nmap <C-b> <:set guitabbar=never>
nmap <C-A-b> <:set guitabbar=always>
pmap <C-v> <:set externalcommand=vlc><openLinkExternal>

" Commands
colorscheme gruvbox

